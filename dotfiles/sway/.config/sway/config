########################################
# GLOBALS
########################################

set $bindsym bindsym --to-code
set $unbindsym unbindsym --to-code
set $mod Mod4
set $left h
set $down j
set $up k
set $right l

########################################
# PATHS
########################################

set $wallpapers $HOME/Resources/Wallpapers
set $default_wallpaper fire.jpg
set $my_own_scripts ~/.my-own-scripts

########################################
# INCLUDE
########################################

include modes/*

########################################
# DEFAULT PROGRAMS
########################################

set $menu wofi --show drun --run-shell-command '{terminal} -e zsh -ic "{cmd} && read"'
set $term foot
set $notifications mako
set $shutdown shutdown now

########################################
# AUDIO
########################################

set $pulseaudio $term pulsemixer
set $sink_volume pactl get-sink-volume @DEFAULT_SINK@ | grep '^Volume:' | cut -d / -f 2 | tr -d ' ' | sed 's/%//'
set $source_volume pactl get-source-volume @DEFAULT_SOURCE@ | grep '^Volume:' | cut -d / -f 2 | tr -d ' ' | sed 's/%//'


########################################
# WORKSPACES
########################################

set $ws1 number 1
set $ws2 number 2
set $ws3 number 3
set $ws4 number 4
set $ws5 number 5
set $ws6 number 6
set $ws7 number 7
set $ws8 number 8
set $ws9 number 9
set $ws10 number 10

########################################
# BAR
########################################

set $statusbar waybar
bar {
    swaybar_command waybar
}

########################################
# LOCKING
########################################

# set $locking swaylock -f --show-failed-attempts -c 333333
# use swaylock-effects for the next to work
set $locking swaylock \
	--screenshots \
	--clock \
	--indicator \
	--indicator-radius 100 \
	--indicator-thickness 7 \
	--effect-blur 7x5 \
	--effect-vignette 0.5:0.5 \
	--ring-color 0b044d \
	--key-hl-color 1800ff \
	--line-color 00000000 \
	--inside-color 00000088 \
	--separator-color 00000000 \
	--grace 2 \
	--fade-in 0.2
set $idle swayidle -w \
    timeout 800 'exec $locking' \
    timeout 1200 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    before-sleep 'playerctl pause' \
    before-sleep 'exec $locking'

########################################
# GAPS, BORDERS
########################################

smart_gaps on
gaps inner 12
gaps outer -2
default_border pixel 2
# hide_edge_borders smart

