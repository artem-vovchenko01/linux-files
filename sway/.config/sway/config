# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

# styles - set the folder for your theme defination file
set $theme /usr/share/sway/themes/matcha-green

#theme variables
include $theme/definitions

# global variables
include etc/sway/definitions

# user variables
include $HOME/.config/sway/definitions.d/*.conf

include etc/sway/inputs/*
include etc/sway/outputs/*

# enable modes
include etc/sway/modes/*

# only enable this if every app you use is compatible with wayland
# xwayland disable

# include additional configs e.g. to autostart applications
include etc/sway/config.d/*

# user config
include $HOME/.config/sway/config.d/*.conf

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

########## MY CHANGES ##########

focus_follows_mouse no

output "eDP-1" {
	disable
}
output "HDMI-A-1" {
	mode 2560x1440@74Hz
	pos 0 0
	transform normal
    scale 1.25
}

smart_gaps off

gaps inner 14
gaps outer -2

output "*" background /home/artem/wallpapers/road.jpg  fill

default_border pixel 3

bindsym $mod+z split horizontal

bindsym $mod+Tab [con_mark=_prev] focus

exec_always "sh /mnt/data/Nextcloud/git/linux_files/bin/.local/bin/scripts/tiling_wms/sway/track_prev_focus.sh"

